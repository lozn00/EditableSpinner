<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EditSpinner">
        <attr name="spinner_value" format="string|reference" />
        <attr name="spinner_gap" format="dimension|reference" />
        <attr name="spinner_hint" format="string|reference" />
        <attr name="spinner_icon" format="color|reference" />
        <attr name="spinner_mode" format="enum">
            <enum name="dropdown" value="1" />
            <enum name="dialog" value="0" />
        </attr>
        <attr name="spinner_editable" format="boolean|reference" />
        <attr name="spinner_rebuild_Id" format="boolean|reference" />
        <attr name="spinner_item" format="string|reference" />
        <attr name="spinner_layout_mode" format="enum">
            <!--            展开按钮在编辑框内 expand button in editlayout inner -->
            <enum name="expand" value="0" />
            <!--            展开按钮在编辑框右边 expand button in editlayout right-->
            <enum name="inner" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TimeView">
<!--       default value eg: 2021-11-18-->
        <attr name="timeview_value" format="string|reference" />
<!--       default format: eg:yy-MM-dd -->
        <attr name="timeview_format" format="string|reference" />
<!--       textview with icon distance -->
        <attr name="timeview_gap" format="dimension|reference" />
<!--       textview label  -->
        <attr name="timeview_hint" format="string|reference" />
<!--       default date ,  -->
        <attr name="timeview_mode" format="enum">
            <enum name="date" value="0" />
            <enum name="time" value="1" />
        </attr>
<!--       default date click icon  -->
        <attr name="timeview_icon" format="color|reference" />
<!--       default date click allow custrom edit time  -->
        <attr name="timeview_editable" format="boolean|reference" />
<!--       default build new id for inner view  -->
        <attr name="timeview_rebuild_Id" format="boolean|reference" />
    </declare-styleable>


</resources>